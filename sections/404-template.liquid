{%- assign item = section.settings -%}
<div class="container-indent nomargin">
  <div class="tt-page404" style="background: {{ item.bg_color }};">
    {% if item.image != blank -%}
      <img
        src="https://cdn.shopify.com/s/files/1/0568/1945/0045/t/66/assets/404%20error%20svg.svg?v=1716819240"
        alt="{{ item.image.alt }}"
      >
    {%- endif %}
    <h1 class="tt-title" style="color: {{ item.t1_color }};">Page not found</h1>
    <p class="tt-paragraph">
      Uh-oh, it seems our page got abducted by aliens! <br class="desktop-only">
      Explore the rest of our galaxy while we head on a rescue mission to bring it back!
    </p>
    <a
      href="/collections/all-ages"
      class="btn btn-white ttbtnmainstyle"
      style="background:#FF805A; color:#fff !important;"
      >Explore our galaxy</a
    >
  </div>
</div>
{% render 'bestseller-collection' %}
<style>
    .tt-page404 h1 {
      font-family: "MikadoMedium";
      text-transform: none;
      font-size: 40px !important;
      color: #06374f !important;
  }

  #shopify-section-404-template>div>div>a {
      width: 425px;
      height: 64px;
      border-radius: 4px;
      font-size: 24px;
      font-family: "MikadoMedium";
  }

  #shopify-section-404-template>div>div>a:hover {
      background: #3980C3;
  }

    .tt-paragraph {
      font-family: AvenirRegular;
  font-size: 20px !important;
  line-height: normal;
  text-align: center;
  color:#06374F;
      margin-top: 1rem !important;
    }

  @media (max-width:786px) {
      .tt-page404 h1 {
          font-size: 28px !important;
      }

    .tt-paragraph {
      font-size: 18px !important;
    }

      #shopify-section-404-template>div>div>a {
          width: 100%;
          height: 59px;
          font-size: 20px;
      }
  }
</style>
{% schema %}
{
  "name": "404",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#2879fe"
    },
    {
      "type": "header",
      "content": "Texts"
    },
    {
      "type": "color",
      "id": "t1_color",
      "label": "Text 1 Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "t2_color",
      "label": "Text 2 Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Button Colors"
    },
    {
      "type": "color",
      "id": "cbtnbg",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "cbtntext",
      "label": "Text Color",
      "default": "#191919"
    },
    {
      "type": "color",
      "id": "acbtnbg",
      "label": "Active Background Color",
      "default": "#191919"
    },
    {
      "type": "color",
      "id": "acbtntext",
      "label": "Active Text Color",
      "default": "#ffffff"
    }
  ]
}
{% endschema %}
