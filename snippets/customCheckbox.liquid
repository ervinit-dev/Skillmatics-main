    <style>
    /* The container */
    .lgfcontainer {
      display: block;
      position: relative;
      padding-left: 35px;
      margin-bottom: 12px;
      cursor: pointer;
      font-size: 22px;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
    }
    
    /* Hide the browser's default checkbox */
    .lgfcontainer input {
      position: absolute;
      opacity: 0;
      cursor: pointer;
      height: 0;
      width: 0;
    }
    
    /* Create a custom checkbox */
    .checkmark {
      position: absolute;
      top: 0;
      left: 0;
      height: 25px;
      width: 25px;
      border-radius: 2px;
      border: 2px solid #2196F3;
      background-color: #fff;
    }
    
    /* On mouse-over, add a grey background color */
    .lgfcontainer:hover input ~ .checkmark {
      background-color: #adcce5;
    }
    
    /* When the checkbox is checked, add a blue background */
    .lgfcontainer input:checked ~ .checkmark {
      background-color: #2196F3;
    }
    
    /* Create the checkmark/indicator (hidden when not checked) */
    .checkmark:after {
      content: "";
      position: absolute;
      display: none;
    }
    
    /* Show the checkmark when checked */
    .lgfcontainer input:checked ~ .checkmark:after {
      display: block;
    }
    
    /* Style the checkmark/indicator */
    .lgfcontainer .checkmark:after {
      left: 7px;
      top: 3px;
      width: 8px;
      height: 14px;
      border: solid white;
      border-width: 0 3px 3px 0;
      -webkit-transform: rotate(45deg);
      -ms-transform: rotate(45deg);
      transform: rotate(45deg);
    }
    .lgfcontainer span{
        margin:0;
    }
    .lgfcontainer p{
        margin:0;
    }
    </style>
    
    
    
    
    
    
    