{%- unless settings.catalogue_mode -%}
{%- if template != "cart" -%}

<!-- tt-cart -->
<a href="/cart"  aria-label="click here and check cart items">
<div class="tt-desctop-parent-cart tt-parent-box test">
  <div class="tt-cart tt-dropdown-obj">
    <button class="tt-dropdown-toggle{% if settings.use_svg_cart_header %} header-icon-with-text{% endif %}"
            data-tooltip="{{ 'general.tooltip_texts.header_cart' | t }}"
            data-tposition="bottom" aria-label="cart items icon"
            >
      {% if settings.header_design == "header_type_5" %}

      <div class="tt-icon-box-header">
        {% if settings.use_svg_cart_header %}
        <span class="tt-icon">
          {{ settings.svg_cart_header }}
        </span>
        {% else %}
        {% comment %}}<i class="icon-f-39"></i>{% endcomment %}
           <img src="https://cdn.shopify.com/s/files/1/0568/1945/0045/t/74/assets/Cart%20svgg.svg?v=1716902387" alt="cart">
        {% endif %}
        <span class="tt-badge-cart">{{ cart.item_count }}</span>
      </div>
      {% if settings.header_design == "header_type_5" and item.cart_icon_text != "" %}
      <span class="tt-dropdown-toggle__text">{{ item.cart_icon_text }}</span>
      {% endif %}

      {% else %}

      {% if settings.use_svg_cart_header %}
      <span class="tt-icon">
        {{ settings.svg_cart_header }}
      </span>
      {% else %}
      {% comment %}}<i class="icon-f-39"></i>{% endcomment %}
         <img src="https://cdn.shopify.com/s/files/1/0568/1945/0045/t/74/assets/Cart%20svgg.svg?v=1716902387" alt="cart">
      {% endif %}
      {% if item.ca_text != '' %}<span class="tt-text">
      {{ item.ca_text }}
      </span>{% endif %}
      <span class="tt-badge-cart" data-cart-count>{{ cart.item_count }}</span>
      {% endif %}      
    </button>
  </a>

    <div class="tt-dropdown-menu">
      <div class="tt-mobile-add">
        <p class="tt-title">{{ 'cart.header.title' | t }}</p>
        <button class="tt-close">{{ 'cart.header.close' | t }}</button>
      </div>
      <div class="tt-dropdown-inner" style="overflow-y:scroll;">
        <div class="tt-cart-layout">
          <div class="tt-cart-content">

            <a href="/cart" class="tt-cart-empty" title="{{ 'cart.header.view_cart' | t }}">
              <i class="icon-f-39"></i>
              <p>{{ 'cart.header.empty_cart' | t }}</p>
            </a>
            
            <div class="tt-cart-box">
              <div class="tt-cart-list" style="overflow-y:scroll;">
                {%- for item in cart.items -%}{%- include "menu-cart-item" length: forloop.index -%}{%- endfor -%}
              </div>
<!--               <div class="flex-align-center header-cart-more-message-js"{% if cart.items.size <= 3 %} style="display: none;"{% endif %}>
                <a href="/cart" class="btn-link-02" title="{{ 'cart.header.view_cart' | t | capitalize }}">{{ 'cart.header.view_cart_all' | t }}</a>
              </div> -->
              <div class="tt-cart-total-row">
                <div class="tt-cart-total-title">{{ 'cart.header.total' | t }}</div>
                <div class="tt-cart-total-price">{{ cart.total_price | money }}</div>
              </div>
              {% if settings.terms_cond_checkbox_show %}
              <div class="checkbox-group m-term-conditions-checkbox term-conditions-checkbox-js">
                <input type="checkbox" id="cart-term-conditions-checkbox" value="1">
                <label for="cart-term-conditions-checkbox">
                  <span class="check"></span>
                  <span class="box"></span>
                  {{ settings.terms_cond_checkbox_text }}
                </label>
              </div>
              {% endif %}
              <div class="tt-cart-btn">
                <div class="tt-item">
                  <a href="/checkout" class="btn{% if settings.terms_cond_checkbox_show %} disabled{% endif %}">{{ 'cart.header.checkout' | t }}</a>
                </div>
                <div class="tt-item">
                  <a href="/cart" class="btn-link-02">{{ 'cart.header.view_cart' | t }}</a>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
      {%- include "menu-cart-item-empty" -%}
    </div>
  </div>
</div>
<!-- /tt-cart -->

{%- endif -%}
{%- endunless -%}